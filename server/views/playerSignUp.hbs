<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    <title>Flippy - Sign Up</title>

    {{! Bootstrap CSS }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" type="text/css" href="/style.css" />
  </head>
  <body id="viewsBody">
    <nav class="nav d-flex justify-content-between">
      <a href="http://localhost:3000/" class="brand-logo">
        Flippy
      </a>

      <ul>
        <li>
          <a
            href="http://localhost:3000/Ranking"
            class="brand navlink"
          >Ranking</a>
        </li>

        <li>
          <a
            href="http://localhost:3000/SignInPlayer"
            class="brand navlink"
          >Login</a>
        </li>
      </ul>
    </nav>

    <div
      class="container-fluid d-flex justify-content-center align-items-center w-100"
    >
      <div class="container-fluid w-50 my-3">
        {{#if message}}
          <p class="{{category}}">{{message}}</p>
        {{/if}}
      </div>
    </div>

    {{! Bootstrap JS }}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
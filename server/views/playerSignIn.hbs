<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Flippy - Sign In</title>

    {{! Bootstrap CSS }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />

    {{! Custom CSS }}
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <link rel="stylesheet" type="text/css" href="/styleSignInSignUp.css" />
  </head>
  <body>
    {{! Nav Header }}
    <nav class="nav d-flex justify-content-between">
      <a href="http://localhost:3000/" class="brand logo">
        Flippy
      </a>

      <ul>
        <li>
          <a
            href="http://localhost:3000/SignUpPlayer"
            class="brand navlink"
          >Create an account</a>
        </li>

        <li>
          <a
            href="http://localhost:3000/Ranking"
            class="brand navlink"
          >Ranking</a>
        </li>
      </ul>
    </nav>

    {{! Error / Success Message Dialog Box }}
    <div id="divDialogBox" class="d-flex justify-content-end text-end w-100">
      {{#if messageError}}
        <div id="dialogBox" class="{{category}}">
          <p class="fs-5 my-0 me-3">{{messageError}}</p>

          <p id="btnCloseDialogBox" class="btn text-danger fs-3 m-0">
            <i class="bi bi-x-circle"></i>
          </p>
        </div>
      {{/if}}

      {{#if messageSuccess}}
        <div id="dialogBox" class="{{category}}">
          <p class="fs-5 my-0 me-3">{{messageSuccess}}</p>

          <p id="btnCloseDialogBox" class="btn text-success fs-3 m-0">
            <i class="bi bi-check-circle"></i>
          </p>
        </div>
      {{/if}}
    </div>

    {{! Player Sign In Form }}
    <div
      id="containerSignIn"
      class="containerSignInSignUp container-fluid bg-light text-start rounded"
    >
      <h3 class="formHeaders text-center">Sign in to your Account</h3>

      <form action="/player/signin" method="POST">
        <fieldset>
          <div>
            <label for="player_code_name">
              Code Name:
            </label>

            <input
              id="player_code_name"
              name="player_code_name"
              type="text"
              class="form-control shadow-none mb-2"
              required
            />
          </div>

          <div>
            <label for="player_password">
              Password:
            </label>

            <input
              id="player_password"
              name="player_password"
              type="password"
              class="form-control shadow-none mb-2"
              required
            />
          </div>

          <div>
            <button
              id="btnSignInPlayer"
              type="submit"
              class="btnSignIn btn btn-warning w-100 mb-3"
            >
              Sign In
            </button>
          </div>
        </fieldset>
      </form>

      <div class="divLinkToSignUp container-fluid py-2 w-75 rounded">
        <p class="orSignUp text-center my-0 mx-3">
          or
          <a href="http://localhost:3000/SignUpPlayer">Create an Account</a>
        </p>
      </div>
    </div>

    {{! Bootstrap JS }}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>

    {{! Custom JS - Manually Close the Dialog Box }}
    <script type="text/javascript">
      document.getElementById("btnCloseDialogBox").addEventListener("click",
      function () { document.getElementById("dialogBox").style.visibility =
      "hidden"});
    </script>

    {{! Custom JS - Automatically Close the Dialog Box }}
    <script type="text/javascript">
      window.addEventListener("load", function () { setTimeout(function () {
      document.getElementById("dialogBox").style.visibility = "hidden"}, 2500)
      })
    </script>
  </body>
</html>